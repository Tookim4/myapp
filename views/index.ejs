<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %>
<body>
    
    <%- include('partials/nav') %>

    <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
            <a href="/blogs/<%= blog._id %>" class="single">
                <h3><%= blog.title %></h3>
                <p><%= blog.snippet%></p>
                <small>By <%= blog.user ? blog.user.username : 'Unknown' %> | <%= formatDate(blog.createdAt) %></small>
            </a>
            <% }) %>
    <% } else { %>
        <h2>No Blog Found</h2>
    <% } %>


    <%- include('partials/footer') %>
</body>
</html>